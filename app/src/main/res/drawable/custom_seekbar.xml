<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Track (Background) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#CCCCCC" />
        </shape>
    </item>

    <!-- Color Segments -->
    <item
        android:id="@+id/colorSegments1"
        android:left="0dp">
        <shape>
            <solid android:color="#FF0000" /> <!-- Màu đoạn 0-20 -->
        </shape>
    </item>

    <item
        android:id="@+id/colorSegments2"
        android:left="50dp">
        <shape>
            <solid android:color="#FFA500" /> <!-- Màu đoạn 20-40 -->
        </shape>
    </item>

    <item
        android:id="@+id/colorSegments3"
        android:left="115dp">
        <shape>
            <solid android:color="#FFFF00" /> <!-- Màu đoạn 40-60 -->
        </shape>
    </item>

    <item
        android:id="@+id/colorSegments4"
        android:left="180dp">
        <shape>
            <solid android:color="#00FF00" /> <!-- Màu đoạn 60-80 -->
        </shape>
    </item>

    <item
        android:id="@+id/colorSegments5"
        android:left="250dp">
        <shape>
            <solid android:color="#8B00FF" /> <!-- Màu đoạn 80-100 -->
        </shape>
    </item>

    <item
        android:id="@+id/colorSegments6"
        android:left="310dp">
        <shape>
            <solid android:color="#63020A" /> <!-- Màu đoạn 100-120 -->
        </shape>
    </item>

</layer-list>
